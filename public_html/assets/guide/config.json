{
	"name": "Wee Style Guide",
	"description": "Wee style guide description.",
	"watch": true,
	"globals": {
		"heading": "Brand design elements"
	},
	"defaults": {
		"template": "templates/default.html"
	},
	"compile": {
		"General": {
			"target": "index.html",
			"root": "partials/general/",
			"partials": [
				"breakpoints.md",
				"grayscale.md"
			]
		},
		"Elements": {
			"target": "elements.html",
			"root": "partials/elements/",
			"partials": [
				"table.md",
				"figure.md",
				"code.md"
			]
		},
		"Forms": {
			"target": "forms.html",
			"root": "partials/forms/",
			"partials": [
				"inputs.md",
				"selects.md",
				"buttons.md"
			]
		},
		"Typography": {
			"target": "typography.html",
			"root": "partials/typography/",
			"partials": [
				"fonts.md",
				"paragraph.md",
				"headings.md",
				"subheadings.md",
				"inline.md",
				"unordered.md",
				"ordered.md",
				"description.md",
				"blockquote.md",
				"address.md"
			]
		}
	}
}